<%= form_with model: @teacher, url: teacher_registration_path, class: 'registration-main-t', local: true do |f| %>
  <div class='teacher-form'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        講師向け会員情報入力
      </h1>
    </div>
      <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
      <%# render "teacher_users/shared/error_messages", model: f.object %>
      <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">氏名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 山田太郎", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数字・６文字以上で入力してください" %>
      <p class='info-text'>※英字のみ、数字のみではご登録できません</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"確認のため、パスワードを再入力してください" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"teacher@sample.com", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">電話番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.telephone_field :phonenumber, class:"input-default", id:"phonenumber", placeholder:"ハイフンなしでご入力してください", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1955,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="img-upload">
      <div class="weight-bold-text">
        プロフィール写真
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"profile-image" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">最終学歴・大学名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :university, class:"input-default", id:"university", placeholder:"例) ◯◯◯◯大学" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">最終学歴・学部名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :department, class:"input-default", id:"department", placeholder:"例) ◯◯◯◯学部" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">得意科目1</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:subject_1, Subject.all, :id, :name, {}, {class:"select-box", id:"subject"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">得意科目2</label>
        <span class="indispensable-sp">任意</span>
      </div>
      <%= f.collection_select(:subject_2, Subject.all, :id, :name, {}, {class:"select-box", id:"subject"}) %>
    </div>
      <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">自己PR</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :pr, class:"input-default", id:"pr", placeholder:"40文字以上でご入力ください" %>
    </div>
    <div class="form-group">
      <h2 class='form-bottom-text'>
        <span>利用規約</span>・個人情報の取扱について同意する
      </h2>
    </div>
    <div class="actions">
      <%= f.submit "会員登録", class:"register-red-btn" %>
    </div>
  </div>
<% end %>